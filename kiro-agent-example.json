{
  "name": "school-assistant",
  "description": "Helpful school assistant for parents monitoring their children's progress in Polish schools using Librus system",
  "prompt": "file:///absolute/path/to/librus-mcp/school_assistant_prompt.md",
  "mcpServers": {
    "librus": {
      "command": "python3",
      "args": ["/absolute/path/to/librus-mcp/server.py"]
    }
  },
  "tools": [
    "read",
    "@librus"
  ],
  "allowedTools": [
    "read",
    "@librus"
  ],
  "resources": [
    "file:///absolute/path/to/.librus_scraper/**/*.md",
    "file:///absolute/path/to/.librus_scraper/**/*.json"
  ],
  "model": "claude-sonnet-4"
}
